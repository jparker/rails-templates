- title 'Sign in'

= form_tag session_path do
  %fieldsets.inputs
    %ol
      %li.string#username_input
        = label_tag :username
        = text_field_tag :username
      %li.password#password_input
        = label_tag :password
        = password_field_tag :password
  %fieldsets.buttons
    %ol
      %li= submit_tag 'Sign in'
